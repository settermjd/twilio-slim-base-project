{
    "name": "settermjd/twilio-slim-base-project",
    "description": "This project the base from which I build my Twilio PHP project.",
    "minimum-stability": "stable",
    "support": {
        "docs": "https://github.com/settermjd/twilio-slim-base-project/README.md",
        "issues": "https://github.com/settermjd/twilio-slim-base-project/issues"
    },
    "keywords": [
        "PHP",
        "PSR7",
        "Slim Framework",
        "Slim",
        "Twilio"
    ],
    "require": {
        "monolog/monolog": "^3.10",
        "php-di/slim-bridge": "^3.4",
        "slim/psr7": "^1.8",
        "slim/slim": "^4.15",
        "twilio/sdk": "^8.10",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.93",
        "laminas/laminas-coding-standard": "^3.1",
        "laminas/laminas-component-installer": "^3.7",
        "laminas/laminas-diactoros": "^3.8",
        "phpstan/phpdoc-parser": "^2.3",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^12.5"
    },
    "config": {
        "allow-plugins": {
            "laminas/laminas-component-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppTest\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@static-analysis",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "post-create-project-cmd": [
            "cp -v .env.example .env",
            "@composer install"
        ],
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "php -S 0.0.0.0:8080 -t public"
        ],
        "static-analysis": "vendor/bin/phpstan analyse",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
